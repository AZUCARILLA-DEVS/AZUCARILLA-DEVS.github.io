            <button id="comic4" text="Comic 4" icon="assets/thumb/92.jpg" iconPosition="top"
                width="100%" />
            <button id="comic5" text="Comic 5" icon="assets/thumb/93.jpg" iconPosition="top"
                width="100%" />
            <button id="comic6" text="Comic 6" icon="assets/thumb/94.jpg" iconPosition="top"
                width="100%" />
            <button id="comic7" text="Comic 7" icon="assets/thumb/95.jpg" iconPosition="top"
                width="100%" />
            <button id="comic8" text="Comic 8" icon="assets/thumb/96.jpg" iconPosition="top"
                width="100%" />
            <button id="comic9" text="Comic 9" icon="assets/thumb/97.jpg" iconPosition="top"
                width="100%" />
        </grid>
    </scrollview>


    <button id="about" text="Acerca de" horizontalAlign="left" />
    <hbox>
        <label text="Powered by" />
        <link id="haxeuilink" text="HaxeUI" />
